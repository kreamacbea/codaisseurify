<%= form_for @artist, html: { multipart: true } do |f| %>

  <div class="form-group">
    <label>Name</label>
    <%= f.text_area :name, placeholder: "The name of the artist", class: "form-control" %>
  </div>

  <div class="form-group">
    <span class="btn btn-default">
      <%= file_field_tag "images[]", type: :file, multiple: true %>
    </span>
  </div>

  <div id="photos">
    <%= render 'photos/list' %>
  </div>

  <label>Post this artist?</label>

  <div class="form-group">
    <%= f.check_box :active %> Active
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
